<div class="article-row-section">
  <div class="article-row-section-inner">

    <h2 class="article-row-section-header">Articles</h2>

    <% @articles.each do |article| %>
    <a>
      <article class="article-row">
        <div class="article-row-content">
          <h1 class="article-row-content-header"><%= article.title %></h1>

          <p class="article-row-content-description"><div>
            <%= raw(article.body).truncate(358) %>
          </div></p>

          <p><%= link_to "Read More", article_path(article) %></p>

          <p class="article-row-content-author"><%= article.author.first_name + " " + article.author.last_name %></p>
          <time class="article-row-content-time" datetime="2008-02-14 20:00"><%= article.created_at %></time>
        </div>
      </article>
    </a>
    <% end %>

    <div>
      <% if logged_in? %>
        <%= link_to "New Article", new_article_path, class: "button tiny" %>
      <% end %>
    </div>
  </div>
</div>
