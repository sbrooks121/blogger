<div class="row">
  <div class="small-12 mediums-12 columns">
    <h1>All Articles</h1>

    <ul id="articles">
      <% @articles.each do |article| %>
        <li>
          <%= link_to article.title, article_path(article) %>
        </li>
      <% end %>
    </ul>

    <% if logged_in? %>
      <%= link_to "Create a New Article", new_article_path, class: "new_article" %>
    <% end %>
  </div>
</div>
